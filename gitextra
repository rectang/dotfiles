[user]
	useConfigOnly = true
[core]
    pager = cat
    editor = vim
[color]
    ui = true
[alias]
    slog = log --pretty=tformat:'%C(bold blue)%h %C(bold red)%ad %C(bold blue)%aN%C(auto)%d %<|(100,trunc)%s%C(reset)' --date=short --graph
    wiff = diff --word-diff=color
[merge]
	ff = no
[pull]
	ff = only
[init]
	defaultBranch = main
